BoxLayout:
	orientation: 'vertical'

	MDToolbar: 
		title: "Bottom Navbar"
		md_bg_color: .2,.2,.2,1
		specific_text_color: 1,1,1,1

	MDBottomNavigation:
		#color stuff

	    MDBottomNavigationItem:
			name: 'screen 1'
			text: "Customer"
			icon: "account"

			MDLabel: 
				text: "Add new customer"
				halign: 'center'

		MDBottomNavigationItem:
			name: 'screen 2'
			text: "Rate"
			icon: "dollar"
			on_release:
				app.open_data_table()

			MDLabel: 
				text: "Rate List"
				halign: 'center'
				
		MDBottomNavigationItem:
			name: 'screen 3'
			text: "Milk"
			icon: "zmdi-drink"

			MDLabel: 
				text: "Generate bill"
				halign: 'center'
					



				
